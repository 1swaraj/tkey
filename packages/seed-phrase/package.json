{
  "name": "@tkey/seed-phrase",
  "version": "1.1.2",
  "description": "TKey Seed Phrase Module",
  "author": "Torus Labs",
  "homepage": "https://github.com/torusresearch/tkey#readme",
  "license": "MIT",
  "main": "dist/seed-phrase.cjs.js",
  "unpkg": "dist/seed-phrase.umd.min.js",	
  "jsdelivr": "dist/seed-phrase.umd.min.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/torusresearch/tkey.git"
  },
  "scripts": {
    "test": "cross-env MOCKED=true mocha --timeout 0",
    "test-development": "cross-env MOCKED=false METADATA=http://localhost:5051 mocha --timeout 0",
    "test-production": "cross-env MOCKED=false METADATA=https://metadata.tor.us mocha --timeout 0",
    "test-debugger": "mocha --inspect-brk",
    "dev": "rimraf dist/ && cross-env NODE_ENV=development parallel-webpack --no-stats",
    "build": "rimraf dist/ && cross-env NODE_ENV=production parallel-webpack --no-stats",
    "build:types": "rimraf types/ && tsc --project tsconfig.types.json",
    "lint": "eslint --fix 'src/**/*.ts'",
    "prepack": "npm run build && npm run build:types",
    "pack": "npm pack"
  },
  "bugs": {
    "url": "https://github.com/torusresearch/tkey/issues"
  },
  "peerDependencies": {	
    "@babel/runtime": "7.x"	
  },
  "dependencies": {
    "@tkey/types": "^1.1.2",
    "bip39": "^3.0.2",
    "bn.js": "^5.1.3",
    "hdkey": "^2.0.1",
    "web3-core": "^1.3.0",
    "web3-eth": "^1.3.0",
    "web3-utils": "^1.3.0"
  },
  "husky": {	
    "hooks": {	
      "pre-commit": "lint-staged"	
    }	
  },	
  "lint-staged": {	
    "*.ts": [	
      "npm run lint --",	
      "prettier --write 'src/**/*.ts'"	
    ]	
  }
}
